<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/MainTheme"
    tools:context=".summaryActivity">

    <TextView
        android:id="@+id/summary_topText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here is your monthly summary"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TableLayout
        android:id="@+id/summaryTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/summary_topText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TableRow>
            <TextView
                android:text="This month you spent:"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/monthlySpending"
                android:text="$317.89"
                android:textSize="32sp"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/socialMediaGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/summaryTable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/socialMediaPercentage"
            android:text="80%"
            android:textSize="36sp"
            android:textAlignment="center"/>
<!--        app:layout_constraintTop_toBottomOf="@id/summaryTable"-->
<!--        app:layout_constraintLeft_toLeftOf="parent"-->
<!--        app:layout_constraintRight_toRightOf="parent"/>-->


        <TextView
            android:id="@+id/socialMediaText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Social Media"
            android:textSize="24sp"/>
<!--            app:layout_constraintTop_toBottomOf="@id/socialMediaPercentage"-->
<!--            app:layout_constraintLeft_toLeftOf="@id/socialMediaPercentage"-->
<!--            app:layout_constraintRight_toRightOf="@id/socialMediaPercentage"/>-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/photoGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/socialMediaGroup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/photoPercentage"
            android:text="5%"
            android:textSize="36sp"
            android:textAlignment="center"/>
    <!--        app:layout_constraintTop_toBottomOf="@id/socialMediaText"-->
    <!--        app:layout_constraintRight_toLeftOf="@id/gamesPercentage"/>-->

        <TextView
            android:id="@+id/photoText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Photos/Videos"
            android:textSize="24sp"/>
<!--            app:layout_constraintTop_toBottomOf="@id/photoPercentage"-->
<!--            app:layout_constraintRight_toLeftOf="@id/gamesText"/>-->
    </LinearLayout>


    <LinearLayout
        android:id="@+id/gamesGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/photoGroup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/gamesPercentage"
            android:text="15%"
            android:textSize="36sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/socialMediaText"
            app:layout_constraintLeft_toRightOf="@id/photoPercentage"/>

        <TextView
            android:id="@+id/gamesText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Games"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/gamesPercentage"
            app:layout_constraintLeft_toRightOf="@id/photoPercentage"/>

    </LinearLayout>



